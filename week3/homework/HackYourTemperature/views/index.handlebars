  <style>
    .container, form, input, button, ul, ul li{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      font-size: 1.5rem;
      font-family: cursive;
      color:rgb(26, 143, 145);
      text-shadow: 0px 0px 5px rgb(252, 251, 209);
      border-radius: 1.5rem;
      padding: 1.2rem;
      margin: 0.2rem;
    }
