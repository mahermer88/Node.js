  <div class="container">
  <h1>Weather Data</h1>
  <form action="/weather" method="POST">
    <input placeholder="Enter a City" type="text" name="cityName">
    <button type="submit">submit</button>
  </form>
  <h4>{{error}}</h4>
  <ul>
  {{#each infoList}}
    <li>{{this}}</li>
  {{/each}}
  </ul>
  </div>